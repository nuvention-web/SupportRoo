<div class="columns large-12 task-info" id='<%= "task-#{task.id}"%>'>
  <div class="top-row">
    <span class="task-type-name">
      <%= task.accepted? ? fa_icon("check-square-o") : fa_icon("square-o") %>
      <%= task.task_type.name %>
    </span>

    <ul class="button-group round edit-buttons">
      <li>
        <%= link_to fa_icon("pencil"), edit_task_path(task.id),
          method: "get",
          class: "button tiny success radius small",
          remote: true %>
      </li>
      <li>
        <%= link_to fa_icon("times"), task_path(task.id), method: "delete", class: "button tiny right alert radius small" %>
      </li>
    </ul>
  </div>

  <div class="primary-info">
    <span class="start-time">
      <strong>Start time: </strong><%= task.start_time.strftime("%B %d, %I:%M%p") %>
    </span>

    <span class="acceptance-info">
      <% if task.accepted? %>
       <strong>Accepted by:</strong> <%= task.supporter_name %>
      <% else %>
        <strong>Status: </strong><span>Unaccepted</span>
      <% end %>
    </span>
  </div>

  <div class="other-info">
    <p><strong>Description:</strong> <%= task.description %></p>
    <% if task.accepted? %>
      <div class="supporter-note">
        <strong>Note: </strong> <em>"<%= task.supporter_message %>"</em>
      </div>
    <% end %>
  </div>
</div>
