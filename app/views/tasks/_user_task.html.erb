<div class="accepted-task task-info columns small-12">
  <span class="task-type-name">
    <%= fa_icon("check-square-o") if task.completed? %>
    <%= task.task_type.name %>
  </span>

  <% if task.completed? %>
    <span class="right label success">Completed!</span>
  <% else %>
    <%= link_to "Mark as completed!", complete_task_path(task),
    class: "button right small", method: :post %>
  <% end %>

  <div class="primary-info">
    <span class="start-time">
      <strong>To be done by: </strong><%= task.start_time.strftime("%B %d, %I:%M %p") %>
    </span>
  </div>

  <div class="other-info">
    <p><strong>Description:</strong> <%= task.description %></p>
  </div>

  <% if !task.completed? %>
    <p><em>Marking this task as complete will notify the board owner via email</em></p>
  <% end %>
</div>

