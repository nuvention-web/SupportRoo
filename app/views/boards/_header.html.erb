<div class="top-bar">
  <div class="row" id="top-stuff">
    <span class="left">
      <%=image_tag 'logo.png', size: '360' %>
    </span>
    <ul class="right">
      <li class="name">
        <h1><a id="top-name" href="/"><%= @board.name %>'s Support Board</a></h1>
      </li>
    </ul>
  </div>
</div>

<div class="full-width text-center share-link-bar orange">
  <span>Share your board!</span>
  <input type="text"
    value="<%= share_board_url(@board) %>">
  </input>
  <%= link_to fa_icon("envelope-o"), "mailto:?subject=Visit my board on SupportRoo!&body=#{share_board_url(@board)}" %>
  <div class="fb-send" data-href="https://supportroo-staging.herokuapp.com/<%= share_board_path(@board) %>" data-colorscheme="light"></div>
</div>
</ul>
