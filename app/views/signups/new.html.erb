<% if flash[:signup_success] %>
  <div class="row panel">Thanks for signing up!</div>
<% elsif flash[:signup_failure] %>
  <div class="row panel">Try signing up again with a valid email!</div>
<% end %>

<div class="row">
  <%= form_for @signup do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.submit 'Sign Up', class: "button" %>
  <% end %>
</div>