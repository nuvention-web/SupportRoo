<div class="row small-10 small-centered columns">
  <h1>My Boards</h1>
  <%= link_to("Create a new board", new_board_path) %>
  <h3>Boards you own</h3>
  <ul class="small-block-grid-5">
    <% @own_boards.each do |b| %>
      <li>
        <%= link_to b.name, b %>
        <a href="#" data-reveal-id="delete-board-modal-<%= b.id %>">
          <%= fa_icon("times") %>
        </a>
        <div class="reveal-modal" id="delete-board-modal-<%= b.id %>" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
          <h4>Are you sure you want to delete this board?</h4>
          <a href="<%= board_path(b) %>" data-method="delete" class="button round alert">Yes, delete board</a>
          <a class="close-reveal-modal" aria-label="Close">&#215;</a>
        </div>
        <p><em><%= b.description %></em></p>
      </li>
    <% end %>
  </ul>

  <h3>Boards you support</h3>
  <% @support_boards.each do |b| %>
    <%= link_to b.name, share_board_path(b) %>
  <% end %>

  <% if session[:code].present? %>
  <h3>Pending Board Invitations</h3>
    <% session[:code].each do |c| %>
      <% if inv = Invite.find_by(code: c) %>
        <%= link_to inv.board.name, claim_board_invites_path(board_id: inv.board, code:c) %>
      <% end %>
    <% end %>
  <% end %>
</div>