<%# Rails flash messages styled for Zurb Foundation %>
<div class="row">
  <div class="large-4 large-offset-4 columns">
    <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
    <div data-alert class="alert-box round <%= flash_helper name %>">
      <%= content_tag :div, msg %>
      <a href="#" class="close">&times;</a>
    </div>
    <% end %>
    <% end %>
  </div>
</div>